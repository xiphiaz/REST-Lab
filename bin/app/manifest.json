{
    // Required
    "manifest_version": 2,
    "name": "Rest Lab",
    "version": "0.0.1",

    // Recommended
    "description": "Endpoint Testing for REST APIs",
    "icons": {
        "16": "/assets/restlab-16.png",
        "48": "/assets/restlab-48.png",
        "128": "/assets/restlab-128.png"
    },

    "app":{
        "background": {
            "scripts": [
                "main.js"
            ]
        }
    },

    "permissions":[
        "storage",
        "http://*/*",
        "https://*/*",
        "notifications",
        {
            "fileSystem":[
                "write",
                "directory",
                "retainEntries"
            ]
        },
        {
            "socket":[
                "tcp-connect",
                "udp-bind::",
                "tcp-listen::",
                "udp-send-to::"
            ]
        }
    ],

    "offline_enabled":true
}