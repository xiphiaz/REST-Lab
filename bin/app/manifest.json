{
    // Required
    "manifest_version": 2,
    "name": "Rest Lab",
    "version": "0.0.1",

    // Recommended
    "description": "Endpoint Testing for REST APIs",
    "icons": {
        "16": "/assets/restlab-16.png",
        "48": "/assets/restlab-48.png",
        "128": "/assets/restlab-128.png"
    },

    "app":{
//        "launch":{
//            "local_path":"index.html"
//        },
        "background": {
            "scripts": [
                "main.js"
//                "chrome-server/underscore.js",
//                "chrome-server/common.js",
//                "chrome-server/mime.js",
//                "chrome-server/buffer.js",
//                "chrome-server/request.js",
//                "chrome-server/stream.js",
//                "chrome-server/connection.js",
//                "chrome-server/webapp.js",
//                "chrome-server/handlers.js",
//                "chrome-server/httplib.js",
//                "background.js",
//                "chrome-server/main.js"
            ]
        }
    },

    "permissions":[
        "storage",
        "http://*/*",
        "https://*/*",
        "notifications",
        {
            "fileSystem":[
                "write",
                "directory",
                "retainEntries"
            ]
        },
        {
            "socket":[
                "tcp-connect",
                "udp-bind::",
                "tcp-listen::",
                "udp-send-to::"
            ]
        }
    ],

    "offline_enabled":true
}